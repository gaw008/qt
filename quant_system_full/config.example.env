# === SECURITY NOTICE ===
# This is a template configuration file
# CRITICAL: Generate secure tokens using scripts/generate_secure_config.py
# CRITICAL: Never use example tokens in production
# CRITICAL: Rotate all credentials regularly

# === Bot / TradeUP SDK ===
TIGER_ID=YOUR_TIGER_ID_HERE
ACCOUNT=YOUR_ACCOUNT_NUMBER_HERE          # Use paper account for testing
PRIVATE_KEY=YOUR_BASE64_ENCODED_PRIVATE_KEY_HERE_OR_USE_PATH_BELOW
SECRET_KEY=
TIMEZONE=US/Eastern
LANG=en_US
DRY_RUN=true  # CRITICAL: Test with dry run first

# === Private Key Configuration ===
# Option 1: Use private key file (recommended)
PRIVATE_KEY_PATH=private_key.pem
# Option 2: Use base64 encoded private key in PRIVATE_KEY above

# === Data Source Configuration ===
# Options: "tiger", "yahoo_api", "yahoo_mcp", "auto"
# "auto" priority: yahoo_api -> yahoo_mcp -> tiger -> placeholder
DATA_SOURCE=auto

# === Yahoo Finance API Settings ===
# Direct API access (recommended for production)
YAHOO_API_TIMEOUT=10.0
YAHOO_API_RETRIES=3
YAHOO_API_RETRY_DELAY=1.0

# === Yahoo Finance MCP Settings ===
# Enable MCP tools for enhanced market data access (alternative to direct API)
USE_MCP_TOOLS=true
# Optional: Yahoo Finance MCP proxy URL for better reliability
# YAHOO_MCP_PROXY_URL=http://127.0.0.1:7890

# === Market Configuration ===
# Primary market for trading (US or CN)
PRIMARY_MARKET=US
# Secondary markets (comma-separated)
SECONDARY_MARKETS=
# Market data timezone
MARKET_DATA_TIMEZONE=US/Eastern

# === Selection Strategy Configuration ===
# Default selection strategy (value_momentum, technical_breakout, earnings_momentum)
DEFAULT_SELECTION_STRATEGY=value_momentum
# Universe size for stock selection
SELECTION_UNIVERSE_SIZE=500
# Number of stocks to select
SELECTION_RESULT_SIZE=20
# Minimum score threshold
SELECTION_MIN_SCORE=0.0

# === Task Scheduling Configuration ===
# Selection tasks interval (seconds) - runs during market closed
SELECTION_TASK_INTERVAL=1800
# Trading tasks interval (seconds) - runs during market hours
TRADING_TASK_INTERVAL=30
# Monitoring tasks interval (seconds) - runs continuously
MONITORING_TASK_INTERVAL=120
# Recovery tasks interval (seconds) - system health checks
RECOVERY_TASK_INTERVAL=300

# === Stock Universe Filtering ===
# Path to CSV file with stock universe (optional)
STOCK_UNIVERSE_FILE=
# Sectors to exclude (comma-separated)
EXCLUDE_SECTORS=
# Sectors to include (comma-separated, if empty includes all)
INCLUDE_SECTORS=
# Market cap filters (USD)
MIN_MARKET_CAP=1000000000
MAX_MARKET_CAP=1000000000000
# Volume and price filters
MIN_DAILY_VOLUME=100000
MIN_STOCK_PRICE=5.0
MAX_STOCK_PRICE=1000.0

# === Dashboard Security ===
# CRITICAL: Generate secure token using: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_TOKEN=GENERATE_SECURE_TOKEN_HERE_32_CHARS_MIN
API_BASE=https://localhost:8443  # Use HTTPS in production

# === Security Configuration ===
# HTTPS/TLS Settings
USE_TLS=true
API_PORT=8443
FRONTEND_PORT=3443
WEBSOCKET_PORT=8444

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# Security headers
ENABLE_SECURITY_HEADERS=true

# Audit logging
ENABLE_AUDIT_LOGGING=true
LOG_SENSITIVE_DATA=false